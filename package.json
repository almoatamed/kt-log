{
  "name": "kt-log",
  "version": "1.0.0",
  "description": "neat logger",
  "keywords": [
    "logging",
    "package-log",
    "node",
    "bun",
    "esm",
    "tooling",
    "monorepo",
    "config log",
    "log",
    "logger"
  ],
  "author": "Salem Elmotamed s.elmotamed96@gmail.com",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/almoatamed/kt-log"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsup src/index.ts --format esm,cjs --dts --out-dir dist --sourcemap",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^6.7.0",
    "typescript": "^5.6.2",
    "@types/node": "^20.2.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5",
    "locate-config-kt": "^1.0.0",
    "kt-common": "^1.0.1"
  }
}